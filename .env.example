# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==================== API KEYS ====================

# Shopify API Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here
SHOPIFY_SHOP_URL=your-shop-name.myshopify.com

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# BigQuery Configuration
BIGQUERY_DATASET_ID=ai_consulting_dataset
BIGQUERY_TABLE_PREFIX=prod_

# ==================== DATABASE ====================

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_consulting
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ==================== SECURITY ====================

# Application Security
SECRET_KEY=your_secret_key_here_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# ==================== EMAIL ====================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@aiconsulting.com

# ==================== ANALYTICS ====================

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==================== STRIPE ====================

# Stripe Payment Configuration
STRIPE_API_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# ==================== AWS ====================

# AWS Configuration (if using S3, Lambda, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-consulting-assets

# ==================== APPLICATION ====================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_BASE_URL=http://localhost:8000
API_RATE_LIMIT=100/hour

# Feature Flags
ENABLE_FORECASTING=True
ENABLE_CHURN_PREDICTION=True
ENABLE_INVENTORY_OPTIMIZATION=True

# ==================== ML MODELS ====================

# Model Configuration
MODEL_CACHE_DIR=./models/cache
MODEL_VERSION=v1.0.0
MODEL_UPDATE_INTERVAL=86400  # seconds

# ==================== MONITORING ====================

# Sentry Error Tracking
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Application Monitoring
APM_SERVICE_NAME=ai-consulting-platform
APM_ENVIRONMENT=development
